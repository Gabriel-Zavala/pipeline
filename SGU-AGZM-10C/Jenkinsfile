pipeline {
    agent any
    
    environment {
        DOCKER_COMPOSE = 'docker-compose'
        PROJECT_NAME = 'SGU-AGZM-10C'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Obteniendo c칩digo del repositorio...'
                checkout scm
            }
        }
        
        stage('Build Backend') {
            steps {
                echo 'Construyendo imagen del backend...'
                sh '''
                    cd backend
                    docker build -t server:1.0-sgu .
                '''
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo 'Construyendo imagen del frontend...'
                sh '''
                    cd frontend
                    docker build -t client:1.0-sgu .
                '''
            }
        }
        
        stage('Stop Previous Containers') {
            steps {
                echo 'Deteniendo contenedores anteriores...'
                sh '''
                    ${DOCKER_COMPOSE} down || true
                '''
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Desplegando aplicaci칩n...'
                sh '''
                    ${DOCKER_COMPOSE} up -d
                '''
            }
        }
        
        stage('Health Check') {
            steps {
                echo 'Verificando salud de los servicios...'
                sh '''
                    sleep 30
                    curl -f http://localhost:3000/health || exit 1
                    curl -f http://localhost/ || exit 1
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline ejecutado exitosamente!'
            echo 'Frontend disponible en: http://localhost'
            echo 'Backend disponible en: http://localhost:3000'
        }
        failure {
            echo 'Pipeline fall칩. Revisa los logs para m치s detalles.'
            sh '''
                ${DOCKER_COMPOSE} logs
            '''
        }
        always {
            echo 'Limpiando recursos temporales...'
        }
    }
}
