pipeline {
    agent any

    environment {
        DOCKER_COMPOSE = 'docker-compose'
        PROJECT_NAME = 'SGU-DEMO-10C'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Obteniendo código del repositorio...'
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                echo 'Construyendo imagen del backend...'
                dir('SGU-DEMO-10C/backend') {
                    bat 'docker build -t server:1.0-sgu .'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'Construyendo imagen del frontend...'
                dir('SGU-DEMO-10C/frontend') {
                    bat 'docker build -t client:1.0-sgu .'
                }
            }
        }

        stage('Stop Previous Containers') {
            steps {
                echo 'Deteniendo contenedores anteriores...'
                dir('SGU-DEMO-10C') {
                    bat '''
                        docker-compose down
                        if errorlevel 1 exit 0
                    '''
                }
            }
        }

        stage('Start Services') {
            steps {
                echo 'Iniciando servicios con docker-compose...'
                dir('SGU-DEMO-10C') {
                    bat 'docker-compose up -d'
                }
            }
        }

        stage('Wait for Services') {
            steps {
                echo 'Esperando a que los servicios estén listos...'
                bat '''
                    ping 127.0.0.1 -n 31 > nul
                    docker ps
                '''
            }
        }

        stage('Health Check') {
            steps {
                echo 'Verificando salud de los servicios...'
                bat '''
                    docker ps | findstr sgu-backend
                    if errorlevel 1 exit 1
                    docker ps | findstr sgu-frontend
                    if errorlevel 1 exit 1
                    docker ps | findstr sgu-database
                    if errorlevel 1 exit 1
                    echo Esperando a que el backend esté completamente listo...
                    ping 127.0.0.1 -n 11 > nul
                    curl http://localhost:8081/api/users
                    if errorlevel 1 (
                        echo Backend aún no está listo, pero los contenedores están corriendo
                        exit 0
                    )
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline ejecutado exitosamente!'
            echo 'Servicios disponibles en:'
            echo '  - Frontend: http://localhost:3000'
            echo '  - Backend: http://localhost:8081'
        }
        failure {
            echo 'Pipeline falló. Revisa los logs para más detalles.'
            dir('SGU-DEMO-10C') {
                bat 'docker-compose logs'
            }
        }
        always {
            echo 'Limpiando archivos temporales...'
        }
    }
}

